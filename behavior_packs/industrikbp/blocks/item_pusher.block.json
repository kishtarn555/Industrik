{
	"format_version": "1.20.20",
	"minecraft:block": {
		"description": {
			"identifier": "industrik:item_pusher",
			"menu_category": {
				"category": "items",
				"group": "itemGroup.name.chest"
			},
			"traits": {
				"minecraft:placement_direction": {
					"enabled_states": ["minecraft:facing_direction"]
				}
			}
		},
